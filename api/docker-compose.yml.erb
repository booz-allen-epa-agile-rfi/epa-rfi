db:
  image: <%= ENV['REGISTRY'] ||= '52.34.113.202' %>/<%= ENV['DATABASE_IMAGE_NAME'] ||= 'devel_database' %>
  container_name: <%= ENV['DATABASE_IMAGE_NAME'] ||= 'devel_database' %>
  ports:
    - 5432:5432
backend:
  image: <%= ENV['REGISTRY'] ||= '52.34.113.202' %>/<%= ENV['BACKEND_IMAGE_NAME'] ||= 'devel_backend' %>
  container_name: <%= ENV['BACKEND_IMAGE_NAME'] ||= 'devel_backend' %>
  ports:
    - 3000:3000
  environment:
    - RAILS_ENV=docker
  links:
    - db
cadvisor:
  image: google/cadvisor:latest
  container_name: 'cadvisor'
  ports:
    - 8080:8080
  volumes: 
    - /:/rootfs:ro
    - /var/run:/var/run:rw
    - /sys:/sys:ro
    - /var/lib/docker/:/var/lib/docker:ro
prometheus:
  image: <%= ENV['REGISTRY'] ||= '52.34.113.202' %>/prometheus
  container_name: 'prometheus'
  entrypoint: /bin/prometheus -config.file=/etc/prometheus/prometheus.yml -alertmanager.url=http://<%= ENV['ALERTMANAGER_IP'] ||= '52.34.113.202' %>:9093 -log.level=debug
  ports:
    - 9090:9090
