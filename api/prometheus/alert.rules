### alert.rules ###

# If down for 60s then trigger is pending.  After another 60s, the alert will fire.
ALERT FrontendContainerDown
  IF absent(((time() - container_last_seen{name="master_frontend"}) < 60)) FOR 60s
  WITH {}
  SUMMARY "Container <strong>master_frontend</strong> is down"
  DESCRIPTION "<strong>master_frontend</strong> container has been down for more than 60 seconds."

